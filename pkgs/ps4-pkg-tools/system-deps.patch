+#
+# Nix-style option: prefer system libraries over vendored submodules.
+# When ON, this avoids requiring git submodules under `externals/*`.
+#
+option(USE_SYSTEM_DEPS "Use system zlib and Crypto++ instead of vendored submodules" OFF)
+
+if(USE_SYSTEM_DEPS)
+  # zlib (needed for PFSC decompression)
+  find_package(ZLIB REQUIRED)
+
+  # Crypto++ (RSA/AES/HMAC)
+  #
+  # Note: Crypto++ does not provide a fully consistent CMake package name across
+  # distros. Prefer a CMake config package if present, then fall back to finding
+  # the library + headers manually.
+  find_package(cryptopp CONFIG QUIET)
+  if(NOT TARGET cryptopp::cryptopp)
+    find_library(CRYPTOPP_LIBRARY NAMES cryptopp cryptopp-static cryptopp-static64)
+    find_path(CRYPTOPP_INCLUDE_DIR cryptopp/cryptlib.h)
+    if(NOT CRYPTOPP_LIBRARY OR NOT CRYPTOPP_INCLUDE_DIR)
+      message(FATAL_ERROR "Crypto++ not found. Install Crypto++ (cryptopp) development files or disable USE_SYSTEM_DEPS.")
+    endif()
+    add_library(cryptopp::cryptopp UNKNOWN IMPORTED)
+    set_target_properties(cryptopp::cryptopp PROPERTIES
+      IMPORTED_LOCATION "${CRYPTOPP_LIBRARY}"
+      INTERFACE_INCLUDE_DIRECTORIES "${CRYPTOPP_INCLUDE_DIR}"
+    )
+  endif()
+else()
+  # Use zlib from submodule (needed for PFSC decompression)
+  set(ZLIB_BUILD_EXAMPLES OFF CACHE BOOL "Build zlib examples" FORCE)
+  set(ZLIB_BUILD_TESTS OFF CACHE BOOL "Build zlib tests" FORCE)
+  add_subdirectory(${CMAKE_SOURCE_DIR}/externals/zlib EXCLUDE_FROM_ALL)
+
+  # Configure cryptopp from submodule (RSA/AES/HMAC)
+  set(CRYPTOPP_BUILD_TESTING OFF CACHE BOOL "Build cryptopp tests")
+  set(CRYPTOPP_BUILD_DOCUMENTATION OFF CACHE BOOL "Build cryptopp documentation")
+  set(CRYPTOPP_INSTALL OFF CACHE BOOL "Install cryptopp library")
+  set(CRYPTOPP_SOURCES ${CMAKE_SOURCE_DIR}/externals/cryptopp)
+  add_subdirectory(${CMAKE_SOURCE_DIR}/externals/cryptopp-cmake EXCLUDE_FROM_ALL)
+endif()
